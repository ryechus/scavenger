.post
  padding 0 20px 20px

.postTitle
  margin-bottom  0
  text-transform lowercase
  //font-size 1.5em

.postBody
  padding 0 15px 5px

.postContent
  margin 5px 0

.postBody
  margin 0

.postDate
  margin-top 0
  font-size 0.8em

.postMedia
  height 500px
  overflow hidden
  display flex

img.postImage
  width 100%
  display block
  margin 0 auto

  @media screen and (min-width: 768px)
    max-width 640px

.postDivider
  color #a9a
  opacity 0.1

.postMediaContent
  width: 100vw
  height: auto

.postTags
  font-size 0.8em
  color #737378
  float right

hr.post-start
  margin-bottom: 25px;

.richtext-image
  display block
  margin 0 auto

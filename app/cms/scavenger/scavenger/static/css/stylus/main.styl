@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100;400&display=swap');
@import 'imports/*'

border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

body
  margin 0
  font-family "Outfit", Arial, sans-serif

body a
  font: 12px/1.4 "Outfit", Arial, sans-serif
  background: black
  color: #ccc

form input
  padding: 5px
  border: 1px solid
  border-radius: 5px

.topBar
  background: black
  height: 50px
  color white
  display flex
  justify-content center
  align-items center

.topBar .title
  font-weight bold
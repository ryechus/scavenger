@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100;400&display=swap');
@import 'imports/*'

border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

body
  margin 0
  font-family 'Heebo', sans-serif
  font-size 16px
  font-weight 300

a:visited, a:hover, a
  color black

form input
  padding: 5px
  border: 1px solid
  border-radius: 5px

.topBar
  height 50px
  display flex
  justify-content center
  align-items center
  margin-bottom 17px

.topBar .title
  font-weight 800
  font-size 1.75em
